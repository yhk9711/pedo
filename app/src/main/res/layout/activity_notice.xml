<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".NoticeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="170dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/notice" />
        </LinearLayout>

        <TextView
            android:id="@+id/blank15"
            android:layout_width="193dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="  "
            android:textColor="#1B5019"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center">

            <Button
                android:id="@+id/notice1"
                android:layout_width="361dp"
                android:fontFamily="@font/nanum_round"
                android:layout_height="19dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                android:gravity="left"
                android:stateListAnimator="@null"
                android:text="                  [필독] 5월 13일 앱 업데이트 사항 및 버그 수정"
                android:textSize="12dp"
                android:textColor="#505152"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom6line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80ffffff"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center">
            <Button
                android:id="@+id/notice2"
                android:layout_width="361dp"
                android:layout_height="19dp"
                android:fontFamily="@font/nanum_round"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                android:gravity="left"
                android:textSize="12dp"
                android:stateListAnimator="@null"
                android:text="                  [공지]5월 8일 어버이날 기념 이벤트 공지"
                android:textColor="#505152"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom7line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80ffffff"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center">
            <Button
                android:id="@+id/notice3"
                android:layout_width="361dp"
                android:layout_height="19dp"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/nanum_round"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                android:gravity="left"
                android:textSize="12dp"
                android:stateListAnimator="@null"
                android:text="                  [공지]4월 15일 앱 업데이트 사항 및 버그 수정"
                android:textColor="#505152"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom8line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80ffffff"
            android:orientation="horizontal">
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center">
            <Button
                android:id="@+id/notice4"
                android:layout_width="361dp"
                android:layout_height="19dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                android:fontFamily="@font/nanum_round"
                android:gravity="left"
                android:textSize="12dp"

                android:stateListAnimator="@null"
                android:text="                  [공지]3월 29일 앱 업데이트 사항 및 버그 수정"
                android:textColor="#505152"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center">
            <Button
                android:id="@+id/notice5"
                android:layout_width="361dp"
                android:layout_height="19dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nanum_round"
                android:background="#ffffff"
                android:gravity="left"
                android:textSize="12dp"
                android:stateListAnimator="@null"
                android:text="                  [공지]3월 1일 앱 업데이트 사항 및 버그 수정"
                android:textColor="#505152"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom4line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80ffffff"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/blank16"
                android:layout_width="193dp"
                android:layout_height="15dp"
                android:gravity="center"
                android:text=""
                android:textColor="#1B5019"
                android:textSize="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">
            <TextView
                android:id="@+id/pageone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textColor="#1B5019"
                android:fontFamily="@font/nanum_round"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/onepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=" page"
                android:fontFamily="@font/nanum_round"
                android:textColor="#1B5019"
                android:textSize="15dp" />
        </LinearLayout>


    </LinearLayout>
    <include layout="@layout/nav1"/>
</androidx.drawerlayout.widget.DrawerLayout>