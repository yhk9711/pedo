<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:id="@+id/drawerView"
    android:background="#d3ebf2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#ebf0f5">

       <!-- <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/background"
            />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENU"
            android:fontFamily="@font/nanum_round"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="#505152"
            android:layout_marginTop="55dp"
            android:layout_centerHorizontal="true">
        </TextView>


        <TextView
            android:id="@+id/nameofuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="박연휘 님"
            android:fontFamily="@font/nanum_round"
            android:textStyle="bold"
            android:textSize="27dp"
            android:textColor="#639cd4"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="94dp"
            >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘도 즐겁게 걸어봅시다!"
            android:fontFamily="@font/nanum_round"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="#505152"
            android:layout_marginTop="145dp"
            android:layout_centerHorizontal="true">
        </TextView>

        <LinearLayout


            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="23dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="230dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/color_user_icon">

            </ImageView>

            <Button
                android:id="@+id/myinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="-10dp"
                android:layout_marginTop="220dp"
                android:layout_marginBottom="-1dp"
                android:background="#00FFFFFF"
                android:fontFamily="@font/nanum_round"
                android:stateListAnimator="@null"
                android:text="내 정보"
                android:textColor="#505152"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottom4line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80ffffff"
            android:layout_marginTop="270dp"
            android:orientation="horizontal">
        </LinearLayout>



        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="26dp"
                android:layout_height="23dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="296dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/friend_icon">

            </ImageView>

        </LinearLayout>

        <Button
            android:id="@+id/friendlist"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom4line"

            android:layout_marginLeft="64dp"
            android:layout_marginTop="15dp"
            android:background="#00ffffff"
            android:fontFamily="@font/nanum_round"
            android:stateListAnimator="@null"
            android:text="친구 리스트"
            android:textColor="#505152"
            android:textSize="12dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/bottom3line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80ffffff"
            android:layout_marginTop="340dp"
            android:orientation="horizontal">
        </LinearLayout>



        <LinearLayout
            android:id="@+id/bottom2line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80ffffff"
            android:layout_marginTop="408dp"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="25dp"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="430dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/map_icon">

            </ImageView>
        </LinearLayout>

        <Button
            android:id="@+id/maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom3line"

            android:layout_marginLeft="39dp"
            android:textSize="12dp"
            android:layout_marginTop="75dp"
            android:background="#00ffffff"
            android:stateListAnimator="@null"
            android:text="지도"
            android:fontFamily="@font/nanum_round"
            android:textColor="#505152"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/bottom5line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80ffffff"
            android:layout_marginTop="540dp"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="22dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="500dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/notice_icon">

            </ImageView>

        </LinearLayout>

        <Button
            android:id="@+id/notice"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom2line"


            android:layout_marginLeft="63dp"
            android:layout_marginTop="75dp"
            android:background="#00ffffff"
            android:fontFamily="@font/nanum_round"
            android:stateListAnimator="@null"
            android:text="공지 사항"
            android:textColor="#505152"
            android:textSize="12dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/bottomline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="475dp"
            android:background="#80ffffff"
            android:orientation="horizontal"></LinearLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="563dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/logout_icon">

            </ImageView>
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottomline"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="73dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/nanum_round"
            android:stateListAnimator="@null"
            android:text="로그아웃"
            android:textColor="#505152"
            android:textSize="12dp"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="360dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/home_icon">

            </ImageView>
        </LinearLayout>

        <Button
            android:id="@+id/hometraining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom3line"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="9dp"
            android:background="#00ffffff"
            android:stateListAnimator="@null"
            android:text="홈 트레이닝"
            android:fontFamily="@font/nanum_round"
            android:textSize="12dp"
            android:textColor="#505152"
            android:textStyle="bold" />



    </RelativeLayout>


</LinearLayout>
