<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".MyInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="160dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/mypage" />
        </LinearLayout>


        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="330dp"
            android:layout_height="280dp" />

        <Button
            android:id="@+id/cal"
            android:layout_width="77dp"
            android:layout_height="28dp"
            android:backgroundTint="#8ec1db"
            android:background="@drawable/round_corner"
            android:fontFamily="@font/nanum_round"
            android:text="월별 통계" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/averagestep1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="최근 일주일 동안 "
                android:textColor="#8ec1db"
                android:fontFamily="@font/nanum_round"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/averagestep2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/nanum_round"
                android:text="하루 평균 "
                android:textColor="#8ec1db"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/averagestep3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanum_round"
                android:gravity="center"
                android:text="9786"
                android:textColor="#8ec1db"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/averagestep4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" 걸음 걸었습니다"
                android:textColor="#8ec1db"
                android:fontFamily="@font/nanum_round"
                android:textSize="15dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center">

            <TextView
                android:id="@+id/numtogoal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="목표 걸음 수: "
                android:textStyle="bold"
                android:fontFamily="@font/nanum_round"
                android:textColor="#8ec1db"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edit_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:ems="7"
                android:maxLength="5"
                android:fontFamily="@font/nanum_round"
                android:inputType="number"
                android:backgroundTint="#1B5019"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="  "
                android:textColor="#639cd4"
                android:textSize="20dp" />
            <Button
                android:id="@+id/btn_changed"
                android:layout_width="62dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#8ec1db"
                android:background="@drawable/round_corner"
                android:gravity="center"
                android:fontFamily="@font/nanum_round"
                android:text="수정" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center">

            <TextView
                android:id="@+id/text_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="키: "
                android:fontFamily="@font/nanum_round"
                android:textStyle="bold"
                android:textColor="#8ec1db"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edit_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:ems="7"
                android:fontFamily="@font/nanum_round"
                android:maxLength="5"
                android:inputType="number"
                android:backgroundTint="#1B5019"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/blank_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="  "
                android:textColor="#639cd4"
                android:textSize="20dp" />
            <Button
                android:id="@+id/btn_changed_height"
                android:layout_width="62dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#8ec1db"
                android:background="@drawable/round_corner"
                android:gravity="center"
                android:fontFamily="@font/nanum_round"
                android:text="수정" />

        </LinearLayout>


    </LinearLayout>
    <include layout="@layout/nav1"/>
</androidx.drawerlayout.widget.DrawerLayout>