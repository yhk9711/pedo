<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".HomeTrainActivity">


    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.example.lwfb.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="284dp"
                android:layout_height="110dp"
                app:srcCompat="@drawable/hometraining" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:gravity="center">

        </LinearLayout>

        <TextView
            android:id="@+id/blank19"
            android:layout_width="161dp"
            android:layout_height="10dp"
            android:gravity="center"
            android:text="     "
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/blank_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="못 걸은 양을 홈트레이닝으로 채워보아요!"
            android:fontFamily="@font/nanum_round"
            android:textColor="#000000"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center">

        </LinearLayout>


        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="120dp"
            android:gravity="left">

            <ImageButton
                android:id="@+id/easy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/imgbtn_easy"
                android:gravity="left"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="center"></LinearLayout>

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="120dp"
            android:gravity="right">

            <ImageButton
                android:id="@+id/normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/imgbtn_normal"
                android:gravity="right"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/blank18"
            android:layout_width="161dp"
            android:layout_height="11dp"
            android:gravity="center"
            android:text="     "
            android:textColor="#000000"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="120dp"
            android:gravity="left">

            <ImageButton
                android:id="@+id/hard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/imgbtn_hard"
                android:gravity="left"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/blank_3"
            android:layout_width="198dp"
            android:layout_height="9dp"
            android:gravity="center"
            android:text="     "
            android:textColor="#000000"
            android:textSize="25dp" />



    </LinearLayout>
    <include layout="@layout/nav1"/>
</androidx.drawerlayout.widget.DrawerLayout>