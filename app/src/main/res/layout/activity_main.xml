<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#ffffff"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/login3" />


    <TextView
        android:id="@+id/blank_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="     "
        android:textColor="#000000"
        android:textSize="30dp" />

    <EditText
        android:layout_width="250dp"
        android:id="@+id/checkId"
        android:layout_height="50dp"
        android:gravity="center"
        android:hint="ID"
        android:textSize="14dp"
        android:fontFamily="@font/nanum_round"
        android:textColorHint="#4d4b4b"
        android:textColor="#000000"
        android:background="@drawable/round_corner"
        android:backgroundTint="#f0f0f0"/>

    <TextView
        android:id="@+id/blank1"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:gravity="center"
        android:text="     "
        android:textColor="#1B5019"
        android:textSize="25dp" />

    <EditText
        android:layout_width="250dp"
        android:id="@+id/checkpw"
        android:layout_height="50dp"
        android:gravity="center"
        android:hint="PASSWORD"
        android:textSize="14dp"
        android:fontFamily="@font/nanum_round"
        android:textColorHint="#4d4b4b"
        android:textColor="#000000"
        android:backgroundTint="#f0f0f0"
        android:background="@drawable/round_corner"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/blank2"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:gravity="center"
        android:text="     "
        android:textColor="#1B5019"
        android:textSize="25dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#8ec1db"
        android:background="@drawable/round_corner"
        android:stateListAnimator="@null"
        android:fontFamily="@font/nanum_round"
        android:textSize="15dp"
        android:text="login" />

    <TextView
        android:id="@+id/blank3"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:gravity="center"
        android:text="     "
        android:textColor="#1B5019"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/blank4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="     "
        android:textColor="#1B5019"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/blank5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="아이디가 없으신가요?"
        android:fontFamily="@font/nanum_round"
        android:textColor="#505152"
        android:textSize="13dp" />

    <Button
        android:id="@+id/register"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:backgroundTint="#8ec1db"
        android:textColorHint="#505152"
        android:textColor="#ffffff"
        android:fontFamily="@font/nanum_round"
        android:textSize="12dp"
        android:background="@drawable/round_corner"
        android:stateListAnimator="@null"
        android:text="sign up" />


</LinearLayout>