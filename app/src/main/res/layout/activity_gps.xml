<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3ebf2"
    android:orientation="vertical"
    tools:context=".MapsActivity">

    <LinearLayout

        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MapsActivity" >

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            tools:context=".MapsActivity" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="   "
                android:textStyle="bold"
                android:textColor="#639cd4"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="목표 위치까지 약 "
                android:textColor="#639cd4"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/blank3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="                     "
                android:textStyle="bold"
                android:textColor="#639cd4"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="40"
                android:background="@drawable/round_corner"
                android:backgroundTint="#52789e"
                android:text="Start" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blank1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="   "
                android:textStyle="bold"
                android:textColor="#639cd4"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/kcnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#639cd4"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/kcaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="  kcal    "
                android:textColor="#639cd4"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/kmnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#639cd4"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/kmtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="  m  "
                android:textColor="#639cd4"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/cntnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0 "
                android:textStyle="bold"
                android:textColor="#639cd4"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/cnttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" 걸음"
                android:textColor="#639cd4"
                android:textSize="15dp" />





        </LinearLayout>



    </LinearLayout>
    <include layout="@layout/nav1"/>
</androidx.drawerlayout.widget.DrawerLayout>